<%- include('../partials/header'); -%>
<link href="/css/data-table.css" rel="stylesheet" />
<main id="main" class="main">
  <div class="pagetitle">
    <h1>Projects</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item">Projects</li>
        <li class="breadcrumb-item active">Data</li>
      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <a href="/add/project"
              ><h5 class="card-title">Add New Project</h5></a
            >

            <!-- Table with stripped rows -->
            <table class="table datatable">
              <thead>
                <tr>
                  <!-- <th scope="col">#</th> -->
                  <!-- <th scope="col">Category</th> -->
                  <th scope="col">Title</th>
                  <th scope="col">Sub Title</th>
                  <th scope="col">Project Link</th>
                  <th scope="col">Image</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% projects.forEach(ex => { %>
                <tr>
                  <td><%= ex.projectName %></td>
                  <td><%= ex.projectSubTitle %></td>
                  <td><%= ex.projectLink %></td>
                  <td><img class="img-responsive" style="width:100px" src="/<%=ex.projectImage %>" alt=""></td>
                  <td><a href="/edit/project/<%=ex._id %>"><i class="bi bi-pencil"></i></a></td>
                  <td><a href="/delete/project/<%=ex._id %>"><i class="bi bi-trash"></i></a></td>
                </tr>

                <% }) %>
              </tbody>
            </table>
            <!-- End Table with stripped rows -->
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<!-- End #main -->

<script src="/js/data-table.js"></script>
<script src="/js/tinymce.min.js"></script>
<%- include('../partials/footer'); -%>
