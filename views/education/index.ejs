<%- include('../partials/header'); -%>
<link href="/css/data-table.css" rel="stylesheet" />
<main id="main" class="main">
  <div class="pagetitle">
    <h1>Educations</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
        <li class="breadcrumb-item">Educations</li>
        <li class="breadcrumb-item active">All</li>
      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <a href="/add/education"
              ><h5 class="card-title">Add Education Bio</h5></a
            >

            <!-- Table with stripped rows -->
            <table class="table datatable">
              <thead>
                <tr>
                  <!-- <th scope="col">#</th> -->
                  <th scope="col">School Name</th>
                  <th scope="col">Department</th>
                  <th scope="col">Date From</th>
                  <th scope="col">Date To</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% educations.forEach(ed => { %>
                <tr>
                  <td><%= ed.schoolName %></td>
                  <td><%= ed.department %></td>
                  <td><%= ed.dateFrom.getFullYear() %></td>
                  <td><%= ed.dateTo.getFullYear() %></td>
                  <td><a href="/edit/education/<%= ed.id %>"><i class="bi bi-pencil"></i></a></td>
                  <td><a href="/delete/education/<%= ed.id %>"><i class="bi bi-trash"></i></a></td>
              
                </tr>

                <% }) %>
              </tbody>
            </table>
            <!-- End Table with stripped rows -->
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<!-- End #main -->

<script src="/js/data-table.js"></script>
<script src="/js/tinymce.min.js"></script>
<%- include('../partials/footer'); -%>
