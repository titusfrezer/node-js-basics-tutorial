<%- include('../partials/header'); -%>
<main class="main" id="main">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Edit Education Bio</h5>

      <!-- Vertical Form -->
      <form
        class="row g-3"
        action="/update/education/<%= education.id %>"
        method="post"
      >
        <div class="col-12">
          <label for="inputNanme4" class="form-label">School Name</label>
          <input
            type="text"
            required
            class="form-control"
            name="schoolName"
            value="<%= education.schoolName %>"
          />
        </div>
        <div class="col-12">
          <label for="inputEmail4" class="form-label">Department</label>
          <input
            type="text"
            required
            class="form-control"
            name="department"
            value="<%= education.department %>"
          />
        </div>
        <div class="col-6">
          <label for="inputPassword4" class="form-label">Date From</label>
          <input
            type="date"
            required
            class="form-control"
            name="dateFrom"
            value="<%= education.dateFrom.toISOString().slice(0,10) %>"
          />
        </div>
        <div class="col-6">
          <label for="inputAddress" class="form-label">Date To</label>
          <input
            type="date"
            required
            class="form-control"
            name="dateTo"
            value="<%= education.dateTo.toISOString().slice(0,10) %>"
          />
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
      <!-- Vertical Form -->
    </div>
  </div>
</main>
<%- include('../partials/footer'); -%>
