
<%- include('../partials/header'); -%>
<main class="main" id ="main">

  <div class="card">
      <div class="card-body">
        <h5 class="card-title">Add Experience</h5>
  
        <!-- Vertical Form -->
        <form class="row g-3" action="/store/experience" method="post">
          <div class="col-12">
            <label for="inputNanme4"  class="form-label">Company Name</label>
            <input type="text" required class="form-control" name="companyName">
          </div>
          <div class="col-12">
            <label for="inputEmail4" class="form-label">Position</label>
            <input type="text" required class="form-control" name="position">
          </div>
          <div class="col-6">
            <label for="inputPassword4" class="form-label">Date From</label>
            <input type="date" required class="form-control" name="dateFrom">
          </div>
          <div class="col-6">
            <label for="inputAddress" class="form-label">Date To</label>
            <input type="date" required class="form-control" name="dateTo" placeholder="1234 Main St">
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
            
          </div>
        </form><!-- Vertical Form -->
  
      </div>
    </div>
</main>
<%- include('../partials/footer'); -%>